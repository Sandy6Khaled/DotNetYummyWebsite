@using YummyProject.ViewModels;
@model YummyProject.ViewModels.MealViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    // ViewBag.SearchMeals = 
}
<div class="container w-75" id="searchContainer"></div>
<main class="min-vh-100 position-relative">
    <div class="container">
        <div class="row py-5 g-4" id="foodRow">
            @if(Model.Meals.Count == 0)
            {
                <div class="col-12">
                    <span>
                        No Meals Found with this Search
                    </span>
                </div>
            }
            @foreach (var item in Model.Meals)
            {
                // console.log(res.meals[i].idMeal);

                <div class="col-md-3">
                    <div data-id="@item.Id" class="meal position-relative overflow-hidden rounded-2 cursor-pointer">
                        <img class="w-100" src="@item.strMealThumb" alt="">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <div class="meal-layer position-absolute d-flex align-items-center text-black p-2">
                                <h3>@item.strMeal</h3>
                            </div>
                        </a>
                    </div>
                </div>

                // console.log(cartona);
            }
        </div>
    </div>
</main>