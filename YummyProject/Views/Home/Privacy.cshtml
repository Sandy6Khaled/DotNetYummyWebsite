@model List<Category>
@* @{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1> *@

<div class="container w-75" id="searchContainer"></div>
<main class="min-vh-100 position-relative">
    @* <div class="inner-loading-screen top-0 start-0 end-0 bottom-0 justify-content-center align-items-center">
    <i class="fa fa-spinner fa-spin fa-5x"></i>
    </div> *@
    <div class="container">
        <div class="row py-5 g-4" id="foodRow">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="meal position-relative overflow-hidden rounded-2 cursor-pointer">
                        <img class="w-100" src="@item.strCategoryThumb" alt="">
                        <a asp-action="GetMealsInCategories" asp-route-id="@item.Id">
                            <div class="meal-layer position-absolute text-center text-black p-2">
                                <h3 id="@item.strCategory">@item.strCategory</h3>
                                <p>
                                    @item.strCategoryDescription
                                    @* .split(" ")
                                .slice(0, 20)
                                .join(" ") *@
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</main>
