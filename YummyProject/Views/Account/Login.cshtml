@model YummyProject.ViewModels.LoginUserViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<style>
    a:hover {
        cursor: pointer;
    }

    .custom-validation-summary ul {
        margin: 0;
        padding: 0;
    }

    .custom-validation-summary li {
        margin-bottom: 5px;
    }
</style>
<div class="limiter text-center">
    <div class="container-login100">
        <div class="wrap-login100 p-l-50 p-r-50 p-t-62 p-b-33">
            <form class="login100-form validate-form flex-sb flex-w" asp-action="Login">
                <h2 class="login100-form-title p-b-53">
                    Sign In With
                </h2>

                @* <div asp-validation-summary="All" class="text-danger"></div> *@
                @if (!ViewData.ModelState.IsValid && @Html.ValidationMessage("LoginError") != null)
                {

                    <div class="alert alert-danger" role="alert" style="margin-left: 137px;">
                        <div class="custom-validation-summary">
                            @Html.ValidationMessage("LoginError")
                        </div>
                    </div>
                }

                <div class="p-t-31 p-b-9">
                    <span class="txt1">
                        Email
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Email is required: ex@abc.xyz">
                    <input class="input100 form-control w-25 m-auto" type="text" asp-for="Email">
                </div>

                <div class="wrap-input100 validate-input" style="border: none; border-radius:0; background-color:white">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>


                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Password
                    </span>

                    @* <a class="txt2 bo1 m-l-5" asp-controller="Account" asp-action="ForgotPassword">
                        Forgot?
                    </a> *@
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100 form-control w-25 m-auto" type="password" asp-for="Password">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input" style="border: none; border-radius:0; background-color:white">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="p-t-13 p-b-9 p-l-17 m-auto">
                    <input class="form-check-input" asp-for="RememberMe" /> Remember Me
                </div>
                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn btn btn-outline-success">
                        Sign In
                    </button>

                </div>

                <div class="w-full text-center p-t-55">
                    <span class="txt2">
                        Not a member?
                    </span>

                    <a class="txt2 bo1" asp-controller="Account" asp-action="Register">
                        Sign up now
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>